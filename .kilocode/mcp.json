{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {
        "DEFAULT_MINIMUM_TOKENS": ""
      },
      "alwaysAllow": [
        "resolve-library-id",
        "get-library-docs"
      ]
    },
    "puppeteer": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ],
      "alwaysAllow": [
        "puppeteer_navigate"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@0.0.38",
        "--browser=chromium",
        "--headless=true",
        "--caps=core,core-tabs,testing"
      ],
      "alwaysAllow": [
        "browser_navigate",
        "browser_snapshot",
        "browser_console_messages",
        "browser_network_requests",
        "browser_click",
        "browser_type",
        "browser_fill_form"
      ]
    }
  }
}